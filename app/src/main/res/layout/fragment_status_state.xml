<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              tools:context="com.example.user.wonderlandapp.StateActivity$PlaceholderFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">

        <TextView
            android:id="@+id/health_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:drawableStart="@drawable/health"/>

        <TextView
            android:id="@+id/gold_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:drawableStart="@drawable/gold"/>

        <TextView
            android:id="@+id/inventory_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:drawableStart="@drawable/inventory"/>

        <TextView
            android:id="@+id/magic_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:drawableStart="@drawable/magic"/>

        <TextView
            android:id="@+id/magicweaponmastery_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:drawableStart="@drawable/magicweaponmastery"/>

        <TextView
            android:id="@+id/spells_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:drawableStart="@drawable/spells"/>

        <TextView
            android:id="@+id/might_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:drawableStart="@drawable/might"/>

        <TextView
            android:id="@+id/mightweaponmastery_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:drawableStart="@drawable/mightweaponmastery"/>

        <TextView
            android:id="@+id/abilities_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:drawableStart="@drawable/abilities"/>

        <TextView
            android:id="@+id/reputation_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:drawableStart="@drawable/reputation"/>

        <TextView
            android:id="@+id/support_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:drawableStart="@drawable/support"/>

        <TextView
            android:id="@+id/tricks_value"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:drawableStart="@drawable/tricks"/>

    </GridLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Special skills"/>

</LinearLayout>
